{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"title": "Front Page Section",
	"description": "A custom block for Front Page Section that will ensure it is full width and full height.",
	"name": "wi-sonx-fse/front-page-section",
	"category": "layout",
	"icon": "layout",
	"style": "file:./style.css",
	"script": "file:./script.ts",
	"editorStyle": "file:./editor.css",
	"editorScript": "file:./index.ts",
	"supports": {
		"align": ["full"],
		"anchor": true,
		"color": {
			"text": true,
			"background": true,
			"link": true,
			"enableContrastChecker": true
		},
		"background": {
			"backgroundImage": true,
			"backgroundSize": true
		},
		"spacing": {
			"padding": true,
			"margin": false,
			"blockGap": true
		},
		"layout": {
			"default": {
				"type":"flex",
				"alignItems":"center",
				"orientation":"vertical",
				"flexWrap":"nowrap",
				"justifyContent":"stretch",
				"verticalAlignment":"center"
			},
			"allowCustomContentAndWideSize": false,
			"allowSwitching": false,
			"allowEditing": false
		}
	},
	"attributes": {
		"align": {
			"type": "string",
			"default": "full"
		},
		"anchor": {
			"type": "string"
		},
		"textColor": {
			"type": "string",
			"default": "contrast"
		},
		"backgroundColor": {
			"type": "string",
			"default": "base"
		},
		"style": {
			"type": "object",
			"default": {
				"background": {
					"backgroundImage": {
						"url": ""
					},
					"backgroundPosition": "50% 50%",
					"backgroundSize": "cover"
				},
				"padding": {
					"top": "var:preset|spacing|60",
					"right": "0",
					"bottom": "var:preset|spacing|60",
					"left": "0"
				}
			}
		}
	}
}
